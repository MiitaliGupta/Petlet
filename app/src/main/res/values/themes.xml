<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Petlet" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/P_DarkPurple</item>
        <item name="colorPrimaryVariant">@color/P_LightPurple</item>
        <item name="colorOnPrimary">@color/P_Yellow</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/P_DarkPurple</item>
        <item name="colorSecondaryVariant">@color/P_LightPurple</item>
        <item name="colorOnSecondary">@color/P_orange</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/P_DarkPurple</item>

        <!-- Customize your theme here. -->

        <!--        Contextual Appbar Style-->
        <item name="android:actionModeStyle" tools:ignore="ObsoleteSdkInt" tools:targetApi="26">
            @style/ActionMode
        </item>
        <item name="actionModeStyle">@style/ActionMode</item>


        <!--            Action Bar Style-->
        <item name="android:actionBarStyle" tools:ignore="ObsoleteSdkInt" tools:targetApi="26">
            @style/ActionBar
        </item>
        <item name="actionBarStyle">@style/ActionBar</item>


    </style>

    <!--        Contextual Appbar Style-->
    <style name="ActionMode" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionModeBackground" tools:ignore="ObsoleteSdkInt" tools:targetApi="26">
            @color/P_DarkPurple
        </item>
        <item name="actionModeBackground">@color/P_DarkPurple</item>
        <item name="android:backgroundSplit" tools:ignore="ObsoleteSdkInt" tools:targetApi="26">
            @color/P_DarkPurple
        </item>

    </style>

    <!--            Action Bar Style-->
    <style name="ActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="backgroundColor">@color/P_DarkPurple</item>
        <item name="background">@color/P_DarkPurple</item>
        <item name="android:background" tools:ignore="ObsoleteSdkInt" tools:targetApi="26">
            @color/P_DarkPurple
        </item>
        <item name="backgroundTint">@color/P_DarkPurple</item>
        <item name="android:colorBackground" tools:ignore="ObsoleteSdkInt" tools:targetApi="26">
            @color/P_DarkPurple
        </item>
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="windowNoTitle">true</item>


    </style>

    <style name="NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

</resources>