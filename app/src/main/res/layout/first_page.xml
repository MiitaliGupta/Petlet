<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:autofillHints="Name"
android:background="@color/P_DarkPurple"
tools:context=".FirstPage">

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/almendra_sc"
        android:text="@string/welcome_to_petlet1"
        android:textColor="#ffb951"
        android:textSize="@dimen/_34ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/resetbtn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="104dp"
        android:layout_weight="1"
        android:backgroundTint="@color/Button"
        android:fontFamily="sans-serif-condensed-medium"
        android:onClick="signUp"
        android:text="Login or Sign Up"
        android:textColor="@color/P_DarkPurple"
        android:textSize="15sp"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:rippleColor="#830A0A" />

    <ImageView
    android:id="@+id/imageView"
    android:layout_width="@dimen/_300sdp"
    android:layout_height="@dimen/_300sdp"
    android:layout_marginBottom="4dp"
    android:contentDescription="@string/bg"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.488"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/resetbtn"
    app:layout_constraintVertical_bias="1.0"
    app:srcCompat="@drawable/bg3" />

</androidx.constraintlayout.widget.ConstraintLayout>